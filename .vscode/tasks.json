{
    "tasks": [
        {
            "type": "cppbuild",
             "label": "C/C++: g++-7 build active file",
           "command": "/usr/bin/g++-7",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/src/smooth_windows.hxx",
                "${workspaceFolder}/src/smooth_windows.cxx",
                "${workspaceFolder}/src/utilities.hxx",
                "${workspaceFolder}/src/utilities.cxx",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-lbenchmark", "-L~/usr/lib",
                "-pthread", "-L~/usr/lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
